<h2>List of all candidates.</h2>

<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Job</th>
    <th>Created at</th>
    <th>Additional</th>
  </tr>
  <% @candidates.each do |candidate| %>
	  <tr>
      <td><%= candidate.id %></td>
	    <td><%= candidate.name %></td>
	    <td><%= candidate.email %></td>
	    <td><%= candidate.phone %></td>
	    <td><%= candidate.job.name.titleize %></td>
      <td><%= candidate.created_at %></td>
      <td><%= link_to "Notes", candidate_notes_path(candidate_id: candidate.id) %></td>
	  </tr>
  <% end %>
</table>